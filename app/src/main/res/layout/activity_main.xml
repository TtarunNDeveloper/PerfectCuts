<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logoclean"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="90dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black">

        </RelativeLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:id="@+id/logSign"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="LOGIN OR SIGNUP"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/logSign"
            android:layout_marginLeft="120dp"
            android:id="@+id/proflogo"
            android:layout_marginTop="50dp"
            android:src="@drawable/baseline_person_pin_24"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:id="@+id/uname"
            android:hint="ENTER USERNAME"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/proflogo"/>

        <EditText
            android:id="@+id/pass"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/uname"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="ENTER PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pass"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/yellow"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="LOGIN" />
        <Button
            android:id="@+id/cancl"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pass"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:backgroundTint="@color/yellow"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="CLEAR" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/cancl"
            android:text="DONT HAVE AN ACCOUNT? CLICK BELOW"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/sample1"/>
        <Button
            android:id="@+id/signUp"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/sample1"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/yellow"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="SIGNUP" />

    </RelativeLayout>

</RelativeLayout>