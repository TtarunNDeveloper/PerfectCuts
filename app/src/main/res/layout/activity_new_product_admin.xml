<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellow1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".NewProductAdmin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow1">
    <include
        layout="@layout/toolbar"/>
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_centerHorizontal="true"
        android:prompt="@string/spinner_hint"
        android:entries="@array/category_options" />
    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_id"
        android:layout_marginTop="16dp"
        android:hint="Product Name" />
    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginTop="16dp"
        android:hint="Product Description (At least 10 words)" />
    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:layout_marginTop="16dp"
        android:hint="Product Price" />
        <RelativeLayout
            android:id="@+id/chckgrp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/product_price">
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sizeS"
                android:text="S"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="M"
                android:id="@+id/sizeM"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sizeL"
                android:text="L"
                android:layout_marginStart="100dp"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sizeXL"
                android:layout_marginStart="150dp"
                android:text="XL"/>
            <CheckBox
                android:layout_below="@+id/sizeS"
                android:id="@+id/radio_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Size"/>
            <EditText
                android:id="@+id/custom_size"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/radio_custom"
                android:layout_marginTop="2dp"
                android:hint="Enter Size in inches"
                android:visibility="gone"/>
        </RelativeLayout>
        <Button
            android:id="@+id/add_images_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chckgrp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp"
            android:text="Add Images" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Iv01"
        android:layout_below="@+id/add_images_button"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Iv02"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/add_images_button"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="260dp"
        android:id="@+id/Iv03"
        android:layout_below="@+id/add_images_button"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Iv04"
        android:layout_below="@+id/Iv01"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Iv05"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/Iv01"/>
    <Button
        android:id="@+id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_below="@id/Iv04"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="Review" />
    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_below="@id/Iv04"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:text="Clear" />
    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">
        <include
            layout="@layout/nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>